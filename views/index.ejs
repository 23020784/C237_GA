<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>TicketEase</title>
  <style>
    .card {
      width: 315px; 
      height: 375px;
      margin-bottom: 20px;
      border-radius: 15px; 
      overflow: hidden; 
      box-shadow: 0 4px 8px rgba(0,0,0,0.1); 
      display: flex;
      flex-direction: column;
      justify-content: space-between;
    }

    .card img {
      width: 53%;
      height: auto; 
      display: block;
      margin: 0 auto;
      margin-top: 10px; /* Adjust as needed to control top margin */
    }

    .card-body {
      padding: 10px; /* Adjusted padding for better spacing */
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      height: 100%;
    }

    .card-title {
      font-size: 0.9rem; /* Adjusted font size */
      margin-bottom: 5px; /* Reduced margin */
      text-align: center;
    }

    .card-text {
      font-size: 0.7rem; /* Adjusted font size */
      margin-bottom: 5px; /* Reduced margin */
      text-align: center;
    }

    .btn-container {
      display: flex;
      justify-content: space-between;
      margin-top: 10px;
    }

    .btn {
      font-size: 0.6rem; /* Adjusted button font size */
      padding: 2px 5px; /* Adjusted button padding */
    }
  </style>
</head>
<body>
  <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Movie Catalogue</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/addMovie">Add new movie</a>
          </li> 
          <li class="nav-item">
            <a class="nav-link" href="/about">About Us</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>
  <div class="container">
    <br>
    <div class="text-center"><h2>Movie Catalogue</h2></div>
    <br>
    <div class="container-fluid">
      <br>
      <div class="text-center"><h2>Movies</h2></div> 
      <br>
      <div class="row d-flex justify-content-center">
        <% movie.forEach(function(movie) { %>
          <div class="col-md-4 d-flex justify-content-center">
            <div class="card">
              <img src="images/<%= movie.image %>" class="card-img-top img-fluid" alt="<%= movie.title %>">
              <div class="card-body">
                <h5 class="card-title"><%= movie.title %></h5>
                <p class="card-text">Release date: <%= new Date(movie.release_date).toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' }) %></p>
                <a href="/movie/<%= movie.movie_id %>" class="btn btn-primary mb-2">View Details</a>
                <div class="btn-container">
                  <a href="/editMovie/<%= movie.movie_id %>" class="btn btn-warning btn-edit">Edit</a>
                  <a href="/deleteMovie/<%= movie.movie_id %>" onclick="return confirm('Are you sure you want to delete this Movie?')" class="btn btn-danger btn-delete">Delete</a>
                </div>
              </div>
            </div>
          </div>
        <% }); %>
      </div>
    </div>
  </div>
</body>
</html>
